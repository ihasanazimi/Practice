<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical"
        android:focusable="true">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_8"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/btn_lifecycle_observer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lifeCycle observer" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btn_live_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="liveData" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btn_mediator_live_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mediator LiveData" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btn_viewModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shared / View Model" />

        </com.google.android.material.chip.ChipGroup>

        <FrameLayout
            android:id="@+id/mvvmContainerFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>