<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:clickable="true"
        android:focusable="true"
        android:background="?colorSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="@dimen/space_16"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/glideImageview"
                    android:layout_width="100dp"
                    android:layout_marginTop="@dimen/space_16"
                    android:layout_height="100dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Glide"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/picassoImagesView"
                    android:layout_width="100dp"
                    android:layout_marginTop="@dimen/space_16"
                    android:layout_height="100dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Picasso"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/coilImages"
                    android:layout_width="100dp"
                    android:layout_marginTop="@dimen/space_16"
                    android:layout_height="100dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coil"/>

                <ir.ha.dummy.utility.customViews.FrescoImageView
                    android:layout_marginTop="@dimen/space_16"
                    android:id="@+id/frescoImageView"
                    android:layout_width="100dp"
                    app:placeholderImage="@drawable/ic_baseline_image_24"
                    android:layout_height="100dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fresco"/>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</layout>